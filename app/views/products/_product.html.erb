<h2><%= link_to product.name, product %></h2>
<% if product.image_filename.present? %>
	<p><%= image_tag product.image_filename, width:100 %></p>
<% end %>
<div><%= product.description %></div>

<p>
  <strong>Price:</strong> <%= number_to_currency(product.price) %>
</p>

<p><%= link_to 'Edit Product', edit_product_path(product) %></p>
<p><%= link_to 'Destroy Product', product, data:{confirm: 'Are you sure you wish to delete?'}, method: :delete %></p>